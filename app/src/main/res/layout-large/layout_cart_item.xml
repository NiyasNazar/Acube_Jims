<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border_detailspage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvdelete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"

            android:src="@drawable/ic_delete"></ImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdv_image"
            android:layout_width="100dp"
            card_view:cardElevation="0dp"
            app:cardElevation="0dp"

            android:layout_centerVertical="true"
            android:layout_height="100dp"
            android:layout_marginLeft="6dp"
            app:cardPreventCornerOverlap="false"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="6.7dp">

            <ImageView
                android:id="@+id/item_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/jwimage"></ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_itemname"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/jtmarniebold"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_serialnumber"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/jtmedium"



            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stoneweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weight"

            android:layout_marginLeft="10dp"

            android:layout_toRightOf="@id/cdv_image"

            android:fontFamily="@font/jtmedium"

            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/tv_stoneweight"

            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/jtmedium"
            android:gravity="center_horizontal"

            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_serialnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_itemname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/jtmedium"

            android:textColor="#000000"
            android:textSize="14sp"></TextView>


    </RelativeLayout>


</RelativeLayout>