<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16.dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/dummy_item_image"></ImageView>

                <com.like.LikeButton

                    android:id="@+id/fav_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"

                    app:icon_size="25dp"
                    app:icon_type="heart" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:maxLines="2"

                    android:minLines="2"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Name"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:maxLines="2"

                    android:minLines="2"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"


                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Serial No"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_serialnumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"


                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Karat"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvkarat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"

                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Weight"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvgrossweight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"

                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Stone Weight"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvstoneweight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Availability"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvstock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"

                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"

                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"
                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:text="Price SAR"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="start"                    android:letterSpacing="0.01"
                    android:paddingLeft="@dimen/_5ssp"
                    android:paddingRight="@dimen/_5ssp"
                    android:textColor="#7e1215"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>