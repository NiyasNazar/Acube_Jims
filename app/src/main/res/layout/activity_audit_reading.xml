<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepagebg"
        tools:context=".presentation.Audit.AuditFragment">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <include
                android:id="@+id/toolbar_app"
                layout="@layout/layout_toolbar">

            </include>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/nestedscrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar_app"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/item_border_detailspage"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdvtotalstock"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/appmaincolor"
                        app:cardCornerRadius="15dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="13sp"
                                android:layout_width="wrap_content"
                                android:textAllCaps="true"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Total Stock">

                            </TextView>
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="16sp"
                                android:text="10"

                                android:id="@+id/tvtotalstock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvfound"

                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="#EB984E "
                            app:cardCornerRadius="15dp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="13sp"

                                    android:layout_width="wrap_content"
                                    android:textAllCaps="true"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Found">

                                </TextView>
                                <TextView
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="16sp"
                                    android:text="10"

                                    android:id="@+id/tvfound"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                </TextView>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cdvmissing"

                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#17A589"
                            app:cardCornerRadius="15dp"
                            app:cardUseCompatPadding="true">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="13sp"

                                    android:layout_width="wrap_content"
                                    android:textAllCaps="true"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Missing">

                                </TextView>
                                <TextView
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:textSize="16sp"
                                    android:text="10"

                                    android:id="@+id/tvmissing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                </TextView>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdvunknown"

                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#1B4F72"
                        app:cardCornerRadius="15dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="13sp"

                                android:layout_width="wrap_content"
                                android:textAllCaps="true"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Unknown">

                            </TextView>
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="16sp"
                                android:text="10"

                                android:id="@+id/tvunknown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cdvlocationmismatch"

                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#3498DB "
                        app:cardCornerRadius="15dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="13sp"
                                android:gravity="center"

                                android:layout_width="wrap_content"
                                android:textAllCaps="true"
                                android:layout_height="wrap_content"
                                android:text="Location Mismatch">

                            </TextView>
                            <TextView
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semibold"
                                android:textSize="16sp"
                                android:text="10"

                                android:id="@+id/tvlocationmismatch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                            </TextView>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BtInventory"
                    android:layout_width="139dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"


                    android:layout_marginBottom="36dp"
                    android:background="@drawable/oval_btn_signin"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvbuttontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan"
                        android:textColor="#FFFFFF">

                    </TextView>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>