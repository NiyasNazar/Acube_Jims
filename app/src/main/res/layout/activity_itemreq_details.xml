<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <!--  android:background="@drawable/homepagebg"
            android:foreground="@drawable/shape_window_dim"-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepagebg"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_app"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/appmaincolor"
                android:elevation="0dp"
                android:gravity="center"
                app:buttonGravity="center_vertical"
                app:titleTextAppearance="@style/Toolbar.TitleText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="end|center">

                <ImageView
                    android:id="@+id/imvfilter"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_filter_svgrepo_com"
                    android:tint="@color/white"
                    android:visibility="visible">

                </ImageView>

                <ImageView
                    android:id="@+id/imvcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic___cart_shopping_icon"
                    android:tint="@color/white"
                    android:visibility="visible">

                </ImageView>


            </LinearLayout>


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_customercode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="#c4224a"
                android:textSize="@dimen/_7ssp"
                android:visibility="gone">

            </TextView>

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@id/tv_customercode"
                android:layout_marginTop="10dp"
                android:visibility="gone">


                <TextView

                    android:id="@+id/tv_customername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_12sdp"

                    android:layout_toRightOf="@id/laytfilter"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/headercolor"
                    android:textSize="@dimen/_7ssp">

                </TextView>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyvcatalog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottomlayt"
                android:layout_below="@+id/header"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/bottomlayt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/appmaincolor"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:id="@+id/selectlayout"
                    android:layout_weight=".8"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/popins_medium"
                        android:text="Select"
                        android:textSize="15sp">

                    </TextView>
                </RelativeLayout>
                <View
                    android:layout_width="1.5dp"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                </View>

                <RelativeLayout
                    android:id="@+id/requestItemlayt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/popins_medium"
                        android:text="Request Item"
                        android:textColor="@color/white"
                        android:textSize="15sp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>