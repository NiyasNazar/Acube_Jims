<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepagebg"
        tools:context=".Presentation.ProductDetails.View.ProductDetailsFragment">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <include
                android:id="@+id/toolbar"
                layout="@layout/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_marginTop="10dp">

            </include>


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottomlayt"
                android:layout_below="@id/toolbar"
                android:layout_marginTop="2dp"
                android:fillViewport="true">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"

                    android:layout_marginRight="14dp"

                    android:layout_marginBottom="16dp"
                    android:background="@drawable/item_border_detailspage"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Customer Name"
                            android:textSize="18sp"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_customername"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Customer Code"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvcustomercode"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Email ID"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvcustomeremail"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Contact Number"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvcustomercontact"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Total Visit"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvtotalvisit"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Last Visit"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvlastvisit"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:text="Total Pucrhases"
                            android:textColor="@color/textcolor">

                        </TextView>

                        <TextView
                            android:id="@+id/tvtoalpurchase"
                            android:layout_width="0dp"
                            android:textSize="18sp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingLeft="15dp"
                            android:textColor="@color/textcolor">

                        </TextView>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingLeft="15dp"
                            android:textColor="@color/headercolor"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:textSize="23sp"
                            android:fontFamily="@font/montserratsemibold"
                            android:text="Last viewed items"
                            android:layout_height="wrap_content">

                        </TextView>

                        <TextView
                            android:id="@+id/ViewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="18dp"
                            android:fontFamily="@font/montserratsemibold"
                            android:paddingLeft="15dp"
                            android:text="View all"
                            android:textColor="@color/headercolor"
                            android:textSize="23sp">

                        </TextView>
                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="15dp"
                        android:id="@+id/recyvvieweditems"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/bottomlayt"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"


                android:gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_selectCustomer"
                    style="@style/Widget.AppCompat.Button.Borderless"

                    android:backgroundTint="@color/appmaincolor"

                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/rec_button"
                    android:text="Select Customer"
                    android:textColor="@color/white">

                </androidx.appcompat.widget.AppCompatButton>


            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>