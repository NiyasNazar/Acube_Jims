<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/laytimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">


                <ImageView
                    android:id="@+id/imageView"


                    android:layout_width="match_parent"
                    android:layout_height="155dp"

                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"

                    android:src="@drawable/jwimage">

                </ImageView>

                <RelativeLayout
                    android:id="@+id/likelayout"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/halfcut"
                    android:visibility="gone">

                    <com.like.LikeButton
                        android:id="@+id/fav_button"


                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        app:icon_size="18dp"


                        app:icon_type="heart"
                        app:like_drawable="@drawable/ic__filled_heart_icon"
                        app:unlike_drawable="@drawable/ic_unfilled_heart_icon" />

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/laytimage"
                android:background="#bd9b16"

                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jtmarniebold"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"

                    android:textSize="13sp">

                </TextView>

                <TextView

                    android:id="@+id/tvqty"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/popins_medium"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="13.3sp" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Item Name"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="asdasdasd"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Item Code"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView

                        android:id="@+id/tv_item_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="asdasdasd"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Description"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView

                        android:id="@+id/tv_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="asdasdasd"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Price"
                        android:textAllCaps="false"
                        android:textColor="#e6000000"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#e6000000"
                        android:textSize="13.3sp" />

                    <TextView

                        android:id="@+id/tvprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="asdasdasd"
                        android:textAllCaps="false"
                        android:textColor="#e6000000"
                        android:textSize="13.3sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Karat"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView

                        android:id="@+id/tvkarat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="asdasdasd"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".8"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:singleLine="true"
                        android:text="Available Qty"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".1"
                        android:ellipsize="end"
                        android:fontFamily="@font/popins_medium"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=":"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="13.3sp" />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
