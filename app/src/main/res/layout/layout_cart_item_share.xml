<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    android:elevation="5dp"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/comparecheckbox"
                android:gravity="center"
                style="@style/Checkboxstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imvdelete"
                android:buttonTint="@color/appmaincolor"></CheckBox>
            <ImageView
                android:id="@+id/imvdelete"
                android:layout_marginTop="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:src="@drawable/ic_delete"></ImageView>
        </LinearLayout>





        <androidx.cardview.widget.CardView
            android:id="@+id/cdv_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"

            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="6.7dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            card_view:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/jwimage"></ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_itemname"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/popins_medium"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/tv_serialnumber"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/popins_medium"
            android:text="asdasdasdasd"


            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_stoneweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_weight"
            android:layout_marginLeft="10dp"

            android:layout_marginBottom="10dp"

            android:layout_toRightOf="@id/cdv_image"

            android:fontFamily="@font/popins_medium"
            android:text="asdasdasdasd"

            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_stoneweight"

            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"

            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/popins_medium"
            android:gravity="center_horizontal"
            android:text="asdasdasdasd"
            android:textColor="#000000"

            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_serialnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_itemname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cdv_image"
            android:fontFamily="@font/popins_medium"
            android:text="asdasdasdasd"

            android:textColor="#000000"
            android:textSize="14sp"></TextView>


    </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>




