<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/parent"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartlayout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"

            android:layout_marginRight="15dp"
            android:layout_marginBottom="50dp"

            android:orientation="vertical">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/laytimage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/item_border_image">

                        <ImageView
                            android:id="@+id/imvsingleitemimage"
                            android:layout_width="200dp"
                            android:layout_centerInParent="true"
                            android:layout_height="200dp"


                            android:padding="10dp">

                        </ImageView>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"

                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Brand Name"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvbrandname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Description"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"


                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Serial Number"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_itemcode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Gender"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_gender"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Making Charge(min)"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvmakingchargemin"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Making Charge (max)"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_makingchrgmax"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Karat"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_karatname"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Color"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_color"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Group Name"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvgroupname"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Gross Weight"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvgrossweight"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:background="#F2edee"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Category"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tvcategory"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text="Sub-Category"
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_subcategory"
                            android:layout_width="0dp"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserratsemibold"
                            android:gravity="start|center"
                            android:letterSpacing="0.01"
                            android:paddingLeft="10dp"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>
    </LinearLayout>
</layout>