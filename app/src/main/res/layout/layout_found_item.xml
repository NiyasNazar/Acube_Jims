<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/shapebg_1">
    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:id="@+id/cdvimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imvitemimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dummy_item_image">

        </ImageView>
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_toRightOf="@id/cdvimage"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_serialnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"

        android:layout_weight="1"

        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/tvitemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_serialnumber"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cdvimage"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/tvlocationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvitemname"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cdvimage"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/tvlocationcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlocationname"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cdvimage"
        android:layout_weight="1"
        android:ellipsize="end"

        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/tvkarat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlocationname"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cdvimage"
        android:layout_weight="1"
        android:ellipsize="end"

        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/tvcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvlocationname"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cdvimage"
        android:layout_weight="1"
        android:ellipsize="end"

        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="2dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textcolor"
        android:textSize="12sp"></TextView>
</LinearLayout>

    <LinearLayout
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"

        android:layout_weight="1"
        android:background="@drawable/table_item_border"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox

            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"


            />
    </LinearLayout>


</RelativeLayout>