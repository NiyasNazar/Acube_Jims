<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/laytimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <ImageView
                android:id="@+id/imvitemimage"


                android:layout_width="match_parent"
                android:layout_height="175dp"

                android:layout_centerVertical="true"
                android:scaleType="fitXY"

                android:src="@drawable/jwimage">

            </ImageView>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/likelayout"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:background="@drawable/halfcut">

                <com.like.LikeButton
                    android:id="@+id/fav_button"


                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    app:icon_size="18dp"


                    app:icon_type="heart"
                    app:like_drawable="@drawable/ic__filled_heart_icon"
                    app:unlike_drawable="@drawable/ic_unfilled_heart_icon" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/laytimage"
            android:orientation="vertical">


            <TextView

                android:id="@+id/tv_itemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/popins_medium"
                android:singleLine="true"
                android:text="Peperomia Raindrop"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/popins_medium"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="5sp"
                android:maxLines="1"
                android:text="â‚¹320"
                android:visibility="gone"
                android:textColor="@color/appmaincolor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:fontFamily="@font/popins_medium"
                    android:maxLines="1"
                    android:textColor="@color/appmaincolor">

                </TextView>

                <TextView
                    android:id="@+id/tv_serialnumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/popins_medium"

                    android:maxLines="1"


                    android:textColor="@color/appmaincolor">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
