<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16.dp"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_border"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/dummy_item_image"></ImageView>

                <CheckBox

                    android:id="@+id/comparecheckbox"
                    style="@style/Checkboxstyle"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="?android:attr/listChoiceIndicatorMultiple"
                    android:button="@null"
                    android:gravity="center"


                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:maxLines="2"

                android:minLines="2"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="Latin Solitare Ring - LSR0002350"
                android:textColor="#7e1215"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_serialnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"


                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="Latin Solitare Ring - LSR0002350"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvkarat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="18K - Weight : 6.76 g"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvgrossweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="18K - Weight : 6.76 g"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvstoneweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="Stone Weight: 1.24 g"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvstock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"

                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:text="Stone Weight: 1.24 g"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/montserratsemibold"
                android:gravity="center"
                android:letterSpacing="0.01"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_5ssp"
                android:textColor="#7e1215"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>