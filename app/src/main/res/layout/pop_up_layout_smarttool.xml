<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvaddtocart"
            android:layout_margin="2dp"

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_shopping_cart_menu"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Add to Cart"

                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvcompare"
            android:layout_margin="2dp"

            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_git_compare_outline_svgrepo_com"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Compare"

                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvsale"
            android:layout_width="0dp"
            android:layout_margin="2dp"

            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_buy"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Sale"

                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvquote"
            android:layout_width="0dp"
            android:layout_margin="2dp"

            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_buy"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Quote"

                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvfavorites"
            android:layout_width="0dp"
            android:layout_margin="2dp"

            android:layout_height="80dp"

            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_baseline_favorite_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Favorites"
                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cdvshare"
            android:layout_width="0dp"
            android:layout_margin="2dp"

            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_baseline_share_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/appmaincolor"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Share"
                    android:textAllCaps="true"
                    android:textColor="@color/appmaincolor">

                </TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>