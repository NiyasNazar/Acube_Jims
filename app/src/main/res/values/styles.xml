    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appmaincolor</item>
        <item name="colorPrimaryDark">@color/appmaincolor</item>
        <item name="colorAccent">@color/appmaincolor</item>
    </style>

    <style name="myDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Checkboxstyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#BF8F3A</item>
        <!--  for uncheck state  -->
        <item name="android:textColorSecondary">#BF8F3A </item>
        <!--  for check state  -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/jtmarniebold</item>
    </style>

    <style name="MyDenseOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlinedDense</item>
        <item name="hintTextColor">@color/appmaincolor</item>
        <item name="boxStrokeColor">@color/appmaincolor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/appmaincolor</item>
    </style>

    <style name="MyThemeOverlayOutlinedDense">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox_dense_h
        </item>
    </style>
    <style name="MyTextInputEditText_outlinedBox_dense_h" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="colorAccent">@color/appmaincolor</item>
        <item name="android:textSize">15sp</item>

        <item name="hintTextColor">#000000</item>
        <item name="boxStrokeColor">@color/appmaincolor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/appmaincolor</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="circle">
        <item name="cornerSize">10%</item>
    </style>

    <style name="AnimDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_start</item>
        <item name="android:windowExitAnimation">@anim/slide_out_end</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>